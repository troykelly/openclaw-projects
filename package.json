{
  "name": "clawdbot-projects",
  "version": "1.0.0",
  "description": "Postgres-backed project + task management system",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "migrate:up": "migrate -path migrations -database \"$DATABASE_URL\" up",
    "migrate:down": "migrate -path migrations -database \"$DATABASE_URL\" down 1",
    "migrate:status": "migrate -path migrations -database \"$DATABASE_URL\" version",
    "migrate:down:all": "migrate -path migrations -database \"$DATABASE_URL\" down",
    "css:build": "tailwindcss -c tailwind.config.ts -i ./src/ui/app.css -o ./src/api/static/app.css",
    "css:watch": "tailwindcss -c tailwind.config.ts -i ./src/ui/app.css -o ./src/api/static/app.css --watch",
    "app:build": "vite build",
    "app:dev": "vite",
    "api:dev": "tsx src/api/run.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^9.0.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/pg": "^8.16.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fastify": "^5.7.2",
    "lucide-react": "^0.563.0",
    "pg": "^8.17.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0"
  }
}
